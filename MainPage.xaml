<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RadialMaui.MainPage">

    <Grid RowDefinitions="*, .10*"
          RowSpacing="10"
          ColumnSpacing="10">

        <Image Source="lekva.jpg"
               Aspect="Fill"
               Grid.Row="0"/>

        <Grid ColumnDefinitions="0.33*, 0.34*, 0.33*"
              ColumnSpacing="10"
              Grid.Row="1">
            <Image Source="lekva.jpg"
                   Aspect="Fill"
                   Grid.Column="0"/>
            <Image Source="lekva.jpg"
                   Aspect="Fill"
                   Grid.Column="1"/>
            <Image Source="lekva.jpg"
                   Aspect="Fill"
                   Grid.Column="2"/>
        </Grid>

    </Grid>

</ContentPage>
