<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RadialMaui.SVGControllerView"
             Title="SVGControllerView"
             xmlns:viewmodel="clr-namespace:RadialMaui.ViewModels"
             x:DataType="viewmodel:SVGControllerViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="5" Spacing="5">
            <Frame>
                <VerticalStackLayout Spacing="20">
                    <Label Text="SVG to GCode" Style="{StaticResource SubHeadline}"/>
                    <Button Text="Covert" Command="{Binding SVGToGCodeCommand}"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>