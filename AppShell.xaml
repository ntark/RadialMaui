<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RadialMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RadialMaui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="RadialMaui">


    <TabBar>
        <Tab Title="GCode">
            <ShellContent
                Title="GCode Controller"
                ContentTemplate="{DataTemplate local:GCodeControllerView}"
                Route="GCodeControllerView" />
        </Tab>
        <Tab Title="Images">
            <ShellContent
                Title="Image Controller"
                ContentTemplate="{DataTemplate local:ImageControllerView}"
                Route="ImageControllerView" />
        </Tab>
        <Tab Title="SVG">
            <ShellContent
                Title="SVG Controller"
                ContentTemplate="{DataTemplate local:SVGControllerView}"
                Route="SVGControllerView" />
        </Tab>
    </TabBar>

</Shell>
